<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ViewPager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vibrant_blue</item>
        <item name="colorPrimaryVariant">@color/vibrant_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vibrant_pink</item>
        <item name="colorSecondaryVariant">@color/vibrant_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>